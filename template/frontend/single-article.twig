{% extends "layout.twig" %}
{% block content %}

        <article class="entry">

            <div class="entry-img">
                <img src="{{ article.img }}" alt="" class="img-fluid">
            </div>

            <h2 class="entry-title">
                <a href="/article/{{ article.Id }}">{{ article.title }}</a>
            </h2>



            <div class="entry-content">

                <p>
                  {{ article.content }}
                </p>
            </div>

        </article><!-- End blog entry -->



{% endblock %}